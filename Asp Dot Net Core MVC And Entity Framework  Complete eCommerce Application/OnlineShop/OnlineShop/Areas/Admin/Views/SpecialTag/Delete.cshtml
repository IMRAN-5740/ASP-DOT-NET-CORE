@using OnlineShop.Models;
@model SpecialTag
@{
    ViewData["Title"] = "Delete";
}
<br />
<h2 class="text-info">Delete Special Tag</h2>
<form asp-action="Delete" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SpecialTagName"></label>
            </div>
            <div class="col-5">
                <input asp-for="SpecialTagName" readonly="readonly" class="form-control" />

            </div>
            <span asp-validation-for="SpecialTagName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
@section Scripts{
  
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
    }


